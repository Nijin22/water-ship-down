# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# Home page
GET     /                           controllers.Application.start()
GET     /refreshAvailableGames      controllers.Application.refreshAvailableGames()

# Create or join game
GET		/createGame					controllers.Application.createGame(username)
GET		/createGameWebSocket		controllers.Application.wsToInformAboutSecondPlayer()
GET		/joinGame					controllers.Application.joinGame(username, matchID)

#Place ships
GET		/placeShips					controllers.Application.placeShips(user1, user2)
GET		/placeShipsFailed			controllers.Application.placeShipsFailed()

#Transmit coordinates to code which places the ship
#GET     /playing                    controllers.Application.playing(c_x,c_y,c_o,b_x,b_y,b_o,d1_x,d1_y,d1_o,d2_x,d2_y,d2_o,s1_x,s1_y,s1_o,s2_x,s2_y,s2_o)

GET     /playing                    controllers.Application.playing()

# tests / mockups
GET		/debug						controllers.Application.debug()